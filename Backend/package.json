{
  "name": "backend-todo-hexagonal",
  "version": "0.1.0",
  "description": "Backend ToDo con arquitectura hexagonal, TypeScript, PostgreSQL y JWT",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "migrate": "psql -h $DB_HOST -p $DB_PORT -U $DB_USER -d $DB_DATABASE -f src/migrations/init.sql",
    "prepare": "npm run build"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.11.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-validator": "^6.15.0"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0",
  "typescript": "^5.5.0",
  "@types/express": "^4.17.21",
  "@types/node": "^20.5.1",
  "@types/jsonwebtoken": "^9.0.2",
  "@types/bcrypt": "^5.0.0",
  "@types/pg": "^8.6.6"
  }
}
